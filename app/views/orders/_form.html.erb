<%= bootstrap_form_for(@order) do |f| %>
	<% if @order.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

			<ul>
				<% @order.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<%= f.text_area :description, placeholder: "Хочу себе... ", rows: 8, hide_label: true %>
	<!-- <%= f.text_area :comment, placeholder: "Комментарий к заказу...", row: 5 %> -->

	<% if !current_page?(root_path) %>
		<% if current_user %>
			<% if current_user.manager? %>
				<%= f.select :status, OrderStatus.statuses %>
				<%= f.select :operator, User.operators.collect { |user| [ "#{user.first_name} #{user.last_name}", user.id] } %>
			<% end %>
		<% end %>
	<% end %>

	<div class="actions">
		<%= f.submit "Отправить", class: "btn btn-primary" %>
	</div>
<% end %>
