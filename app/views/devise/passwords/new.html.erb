<h2 class="caption">Забыли пароль?</h2>

<div class="row">
	<div class="col-sm-4">
		<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<div class="field">
				<%= f.email_field :email, autofocus: true %>
			</div>

			<div class="actions">
				<%= f.submit "Send me reset password instructions", class: "btn" %>
			</div>
		<% end %>

		<%= render "devise/shared/links" %>
		
	</div>
	
</div>
