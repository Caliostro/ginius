<div class="modal fade" id="sign_up" role="dialog" aria-labelledby="sign_up_label" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" aria-label="Close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
				<h2 class="modal-title">Регистрация</h2>
			</div>

			<div class="modal-body">
				<%= bootstrap_form_for(resource, as: resource_name, 
					url: registration_path(resource_name),
					:html => { :id => "sign_up_user", :'data-type' => 'json'},
					:format => :json,
					:remote => true	) do |f| %>

					<%= devise_error_messages! %>

					<%= f.text_field :first_name, required: true, autofocus: true, placeholder: "Иван" %>
					<%= f.text_field :last_name, required: true, placeholder: "Иванов" %>
				    <%= f.email_field :email, required: true, placeholder: "email@email.ru" %>
					<%= f.telephone_field :phone, required: true, placeholder: "+7 (111) 222-33-55", maxlength: 18 %>
					<%= f.text_area :address, rows: 4 %>

				    <%= f.password_field :password, autocomplete: "off", help: "минимум #{@minimum_password_length} символов" %>
				    <%= f.password_field :password_confirmation, autocomplete: "off" %>

				  <div class="actions">
				    <%= f.submit "Зарегистрироваться", class: "btn btn-success btn-block" %>
				  </div>
				<% end %>

			</div>
			<div class="modal-footer">
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>